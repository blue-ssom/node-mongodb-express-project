<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>알림 페이지</title>
      <style>
       .notification-container {
            margin-bottom: 20px;
            padding: 10px;
            margin-top: 10px;
            border: 1px solid #ccc;
        }

        .notification-container p {
            margin-bottom: 5px;
            font-size: 16px;
        }

    </style>
</head>
<body>
    <h1>알림 페이지</h1>
    <a href="/post/all">메인페이지로 이동</a>
        {{#each notifications}}
            <div class="notification-container">
                <p>{{this.message}}</p>
                <p>{{this.createdAt}}</p>
                <a href="#" class="notification-link" data-post-id="{{this.post_id}}" data-notification-type="{{this.type}}">이동</a>
            </div>
        {{/each}}
    <script>
        document.querySelectorAll('.notification-link').forEach(link => {
        link.addEventListener('click', async (event) => {
            event.preventDefault(); // 기본 동작(링크 이동) 방지
            const postId = link.getAttribute('data-post-id');
            const notificationType = link.getAttribute('data-notification-type'); // 알림 유형을 가져옴
            console.log(notificationType);
            // postId와 notificationType을 사용하여 해당 동작을 수행
            if (notificationType === 'post') {
                window.location.href = `/post/${postId}`;
            } else if (notificationType === 'like') {
                // 좋아요 알림인 경우 다른 동작을 수행 개인 정보 페이지로 이동
                window.location.href = `/account/my`;
            }

            // postId를 사용하여 해당 게시글의 URL로 이동
            // window.location.href = `/post/${postId}`;
        });
    });
    </script>
</body>
</html>
